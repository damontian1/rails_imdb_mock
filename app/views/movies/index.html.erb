<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Movies Review IMDB Mock Site</h1>
    <p>Sign up now to create a review and to write a review for your favorite movies</p>
    <p><%= link_to "Sign Up Now!", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:medium), class: "image"), movie %>
      </div>
    </div>
  <% end %>
</div>